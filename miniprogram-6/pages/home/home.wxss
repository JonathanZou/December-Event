/* pages/home/home.wxss */
.small-text{
  color: white;
  padding: 18rpx;
  font-size: 35rpx;
}
.title-text{
  padding-top: 10rpx;
  margin-left: 45rpx;
  font-size: 60rpx;
  color: white;
  font-weight: 800;
}
.subTitleText{
  margin-top: 40rpx;
  margin-left: 45rpx;
  font-size: 50rpx;
  color: white;
}
.big-box{
  background-color: #282832;
  margin-left: 30rpx;
  margin-right: 30rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  align-items: stretch;
}
.activityBox{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.subText{
  color: #5b5b5b;
  font-size: 30rpx;
}
.arrow{
  height: 40rpx;
  width: 40rpx;
  padding: 15rpx;
}
.text_button{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.line{
  background: #5b5b5b;
  width: 100%;
  height: 3rpx;
}
.disabledSmallText{
  color: #5b5b5b;
  padding: 15rpx;
  font-size: 40rpx;
  vertical-align: middle;
}
.picBox{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.caution-text{
  margin: 12rpx;
  align-content: center;
  font-size: 27rpx;
  color: #e64340;
}
.anonymousCheckbox{
  font-size: 30rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  color: white;
  padding-left: 18rpx;
}
.nameContainer{
  display: flex;
  flex-direction: row;
  color: white;
  padding-left: 18rpx;
  align-items: center;
}
.inputBox {
  margin-left: 10rpx;
  font-size: 35rpx;
  color: white;
  padding-left: 18rpx;
}
.gradeClassContainer{
  display: flex;
  flex-direction: column;
  color: white;
  padding-left: 18rpx;
}
.bigButton{
  margin-left: 30rpx;
  margin-right: 30rpx;
  border-radius: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: blueviolet;
  text-align: center;
}
.buttonText {
  padding-top: 10rpx;
  margin-left: 20rpx;
  font-size: 35rpx;
  color: white;
}
.side-text{
  margin: 30rpx;
  color: lightseagreen;
  font-size: 25rpx;
}